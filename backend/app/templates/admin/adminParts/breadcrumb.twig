<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-sm-6">
                                <h1 class="m-0 text-dark">{{ page_title|raw }}</h1>
                            </div><!-- /.col -->
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    {% if breadcrumb is defined %}
                                        {% set CountBreadCrumb = breadcrumb|length %}
                                        {% for key, item in breadcrumb %}
                                            <li class="breadcrumb-item {% if key == CountBreadCrumb-1%}active{% endif %}">
                                                <a href="{% if key == CountBreadCrumb-1%}javascript:void(0);{% else %}{{ item.url }}{% endif %}">{{ item.name }}</a>
                                            </li>
                                        {% endfor %}
                                    {% endif %}
                                </ol>
                            </div><!-- /.col -->
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->